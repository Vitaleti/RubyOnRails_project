<section class="pt-70 pb-10 w-full h-full bg-[#F39A94]">
  <div class="w-[1000px] mx-auto">
    <h1 class="text-5xl mt-6">Posts</h1>
  </div>

  <% @posts.each do |post| %>
    <div class="w-[1000px] mx-auto bg-[#ACCBC3] mt-6 p-5 border-2 border-black rounded-lg">
      <%= link_to post.user.nickname, other_user_path(post.user.nickname) %>
      <h2 class="text-2xl mt-3"><%= post.title %></h2>
      <p><%= post.description %><p>

      <% if post.image.attached? %>
        <%= image_tag post.image %>
      <% end %>

      <% if post.user_id == current_user.id %>
        <%= link_to "Edit", post_edit_path(current_user.nickname, post.id),
          class: "text-2xl mt-6 text-blue-500"
        %>
      <% end %>
    </div>
  <% end %>
</section>