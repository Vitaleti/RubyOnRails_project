<section class="pt-70 w-full h-screen bg-[#F39A94]">
  <div class="w-[1000px] mx-auto">
    <h1 class="text-5xl mt-6">Users</h1>
  </div>
  
  <% @users.each do |user| %>
    <div class="w-[1000px] mx-auto bg-[#ACCBC3] mt-6 p-5 border-2 border-black rounded-lg">
      <h2 class="text-2xl mt-3"><%= user.nickname %></h2>
      <p class="mt-3"><%= user.name %></p>
      <p><%= user.lastname %></p>

      <%= link_to "Go to the profile", other_user_path(user.nickname),
        class: "text-[18px] font-extrabold" 
      %>

      <% if current_user.following.include?(user) %>
        <%= button_to 'Unfollow', subscription_path(current_user.active_subscriptions.find_by(followed_id: user.id)),
          method: :delete,
          class: "px-5 py-2 border border-black rounded-lg bg-[#FED6A2] text-[18px] font-extrabold italic" 
        %>
      <% else %>
        <%= button_to 'Follow', subscriptions_path(followed_id: user.id),
          class: "px-5 py-2 border border-black rounded-lg bg-[#FED6A2] text-[18px] font-extrabold italic"
        %>
      <% end %>
    </div>
  <% end %>
</section>